<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="YouChatTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="YouChatBackgroundTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/acesse_lightblue</item>
    </style>

    <style name="Animations" />

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
	<style name="TextSize_16_bold_black">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="TextSize_16_white" >
	   <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/white</item> 
	</style>
	<style name="TextSize_20_white" >
	   <item name="android:textSize">20sp</item>
	    <item name="android:textColor">@color/white</item> 
	</style>
	<style name="TextSize_15_blue" >
	   <item name="android:textSize">15sp</item>
	    <item name="android:textColor">@color/text_blue</item> 
	</style>
	<style name="presence_BackGroundImageView">
		<item name="android:height">70dp</item>
		<item name="android:width">70dp</item>
		<item name="android:scaleType">fitXY</item>
		<item name="android:src">@drawable/grey_disconnected</item>
    </style>
</resources>