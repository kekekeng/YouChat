<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_text"
                android:text="Ice Cream is Good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="@color/acesse_blue4"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            
              <!-- <ImageView
                android:id="@+id/presence"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/presence_level" />
    
            <TextView
                android:id="@+id/date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:lines="1"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall" /> -->

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:background="@color/contact_grey_bg"
            android:orientation="horizontal" >
			<ImageView
                android:id="@+id/white_arrow_l"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/contact_more_arrow_l" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/button_photo1"
                    android:layout_width="@dimen/contact_list_icon_size"
                    android:layout_height="@dimen/contact_list_icon_size"
                    android:background="@drawable/contacts_green_ring"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_photo_bg" />

                <TextView
                    android:id="@+id/contact_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Salil S"
                    android:textColor="@color/text_blue"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/button_photo2"
                    android:layout_width="@dimen/contact_list_icon_size"
                    android:layout_height="@dimen/contact_list_icon_size"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/contacts_gray_ring"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_photo_bg" />

                <TextView
                    android:id="@+id/contact_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Eric L"
                    android:textColor="@color/text_blue"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/button_photo3"
                    android:layout_width="@dimen/contact_list_icon_size"
                    android:layout_height="@dimen/contact_list_icon_size"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/contacts_gray_ring"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_photo_bg" />

                <TextView
                    android:id="@+id/contact_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Blil B"
                    android:textColor="@color/text_blue"
                    android:textSize="12dp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/button_photo4"
                    android:layout_width="@dimen/contact_list_icon_size"
                    android:layout_height="@dimen/contact_list_icon_size"
                    android:background="@drawable/contacts_green_ring"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="7dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_photo_bg" />

                <TextView
                    android:id="@+id/contact_name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:text="Apple J"
                    android:textColor="@color/text_blue"
                    android:textSize="12dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/white_arrow_r"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/white_next_arrow" />

        </LinearLayout>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:textColor="@color/text_light_blue"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
             />

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recent"
            android:orientation="horizontal" >

            <ImageView
                    android:id="@+id/button_photo"
                    android:layout_width="@dimen/contact_list_icon_size"
                    android:layout_height="@dimen/contact_list_icon_size"
                    android:layout_marginBottom="10dp"                   
                    android:layout_marginLeft="7dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_photo_bg" />
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/contact_grey_bg"    
                android:padding="5dp"            
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="Cheesecake marshmallow jelly brownie pudding ice cream icing danish"
                android:textSize="10dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <TextView
            android:id ="@+id/recent_contact_name"
            android:layout_above="@id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Apple Juice"
            android:layout_marginLeft="57dp" 
            android:textColor="@color/text_blue"
            android:textSize="11dp"/>
        
    </RelativeLayout>

</LinearLayout>