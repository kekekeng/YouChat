<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:weightSum="8">

    <TextView
        android:id="@+id/request_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/requests"
        android:textColor="@color/text_blue"
        android:textSize="24dp" 
        />
    
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/request_text"
        android:layout_marginTop="5dp"
        android:background="@color/ltgray" 
        />
    
    <LinearLayout
        android:id="@+id/request_contact_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="3.5"
        android:weightSum="4">

        <ImageView
            android:id="@+id/contact_redx"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/contact_red_x" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            >

            <ImageView
                android:id="@+id/button_photo"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"                
                android:layout_width="@dimen/photo_icon_size"
                android:layout_height="@dimen/photo_icon_size"   
                android:scaleType="fitXY"
                android:src="@drawable/green_layer" />
            
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"        
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/first_name_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                        
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="right"
                        android:hint="@string/first"
                        android:inputType="textCapWords"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_blue"
                        android:textCursorDrawable="@null"
                        android:textSize="24dp"
                        />

                    <TextView
                        android:id="@+id/last_name_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                        
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/last"
                        android:inputType="textCapWords"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_blue"
                        android:textCursorDrawable="@null"
                        android:textSize="24dp"
                        />
                    
                </LinearLayout>
                
            <TextView
                android:id="@+id/like_to_add_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/like_to_add_contacts"
                android:textColor="@color/text_blue"
                android:textSize="14dp"
                android:textStyle="italic"
                android:typeface="normal" />

        </LinearLayout>

   		<ImageView
   		    android:id="@+id/green_check"
   		    android:layout_width="22dp"
   		    android:layout_height="22dp"
   		    android:layout_marginRight="50dp"
   		    android:layout_marginTop="40dp"
   		    android:layout_weight="1"
   		    android:scaleType="fitCenter"
   		    android:src="@drawable/green_check_mark" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="2.5"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:background="@color/ltgray" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/ltgray" />
    
    <LinearLayout
        android:layout_width="fill_parent"
   		android:layout_height="0dp"
   		android:layout_weight="1"
   		android:orientation="horizontal"
		android:gravity="end"	   		
   		>
   		
   		<TextView
            android:id="@+id/ok_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/text_blue"
            android:textSize="24dp"
            android:typeface="normal"
            android:layout_gravity="center_vertical"
        />
   		
   		<ImageView
   		    android:id="@+id/blue_arrow"
   		    android:layout_width="18dp"
   		    android:layout_height="24dp"
   		    android:layout_marginLeft="5dp"
   		    android:layout_marginRight="10dp"
   		    android:layout_gravity="center_vertical"
   		    android:scaleType="fitCenter"
   		    android:src="@drawable/blue_next_arrow" />
   		
            
        
    </LinearLayout>
</LinearLayout>
